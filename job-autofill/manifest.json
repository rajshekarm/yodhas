{
  "manifest_version": 3,
  "name": "Universal Job Autofill",
  "version": "1.0",
  "description": "Semantic autofill for job applications across job boards",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["fieldMap.js", "utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
